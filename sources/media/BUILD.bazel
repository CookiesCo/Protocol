
package(default_visibility = ["//visibility:public"])
load("//defs:proto.bzl", "proto", "module")


## Media
proto(
    name = "MediaOrientation",
    srcs = ["MediaOrientation.proto"],
    deps = ["//sources/core:Datamodel"],
    strip_import_prefix = "/sources")

proto(
    name = "MediaType",
    srcs = ["MediaType.proto"],
    deps = ["//sources/core:Datamodel"],
    strip_import_prefix = "/sources")

proto(
    name = "MediaKey",
    srcs = ["MediaKey.proto"],
    deps = [
        ":MediaType",
        "//sources/core:Datamodel"],
    strip_import_prefix = "/sources")

