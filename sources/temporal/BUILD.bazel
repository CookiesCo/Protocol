
package(default_visibility = ["//visibility:public"])
load("//defs:proto.bzl", "proto", "module")


## Temporal
proto(
    name = "Date",
    srcs = ["Date.proto"],
    deps = ["//sources/core:Datamodel"],
    strip_import_prefix = "/sources")

proto(
    name = "Duration",
    srcs = ["Duration.proto"],
    deps = ["//sources/core:Datamodel"],
    strip_import_prefix = "/sources")

proto(
    name = "Instant",
    srcs = ["Instant.proto"],
    deps = ["//sources/core:Datamodel"],
    strip_import_prefix = "/sources")

proto(
    name = "Interval",
    srcs = ["Interval.proto"],
    deps = ["//sources/core:Datamodel"],
    strip_import_prefix = "/sources")

proto(
    name = "Time",
    srcs = ["Time.proto"],
    strip_import_prefix = "/sources")

proto(
    name = "Schedule",
    srcs = ["Schedule.proto"],
    deps = [
        ":Time",
        ":Instant",
        ":Interval",
        "//sources/core:Datamodel"],
    strip_import_prefix = "/sources")

proto(
    name = "Timehash",
    srcs = ["Timehash.proto"],
    deps = ["//sources/core:Datamodel"],
    strip_import_prefix = "/sources")


module(
    name = "opencannabis.temporal",
    deps = [
        ":Date",
        ":Duration",
        ":Instant",
        ":Interval",
        ":Time",
        ":Schedule",
        ":Timehash"],
    strip_import_prefix = "/sources")
